/* Checkbox custom styling */
.checkbox-label {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    cursor: pointer;
    user-select: none;
}

.checkbox-custom {
    width: 20px;
    height: 20px;
    border: 2px solid var(--border-gray);
    border-radius: var(--radius-sm);
    position: relative;
    flex-shrink: 0;
    transition: all 0.3s ease;
}

input[type="checkbox"] {
    display: none;
}

